             Shell.NavBarIsVisible="false"
             Title="Level Up">

    <ContentPage.Resources>
        <DataTemplate x:Key="LevelUpView" x:DataType="model:Attribute">
            <Grid Padding="10">
                <Frame>
                    <Grid Padding="0" ColumnDefinitions="125,*">
                        <Image Aspect="AspectFill" HeightRequest="125" Source="{Binding Image}" WidthRequest="125" />
                        <VerticalStackLayout Grid.Column="1" Padding="10">
                            <Label Text="{Binding Display_Name}" />
                            <Label Text="{Binding CurrentLevel}" />
                        </VerticalStackLayout>
                    </Grid>
                </Frame>
            </Grid>
        </DataTemplate>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout>

            <CollectionView ItemsSource="{Binding Character.Char_Attributes}" ItemTemplate="{StaticResource LevelUpView}"></CollectionView>

        </StackLayout>

    </ScrollView>

