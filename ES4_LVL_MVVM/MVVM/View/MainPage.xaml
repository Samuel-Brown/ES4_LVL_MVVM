<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:ES4_LVL_MVVM.MVVM.Model"
             xmlns:viewmodel="clr-namespace:ES4_LVL_MVVM.MVVM.ViewModels"
             x:Class="ES4_LVL_MVVM.MVVM.View.MainPage">
    <ContentPage.Resources>
        <DataTemplate x:Key="CharacterList">
            <Frame>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer 
                                        Command="{Binding NavigateToNewCharacterPageCommand}"/>
                </Frame.GestureRecognizers>
                <StackLayout Orientation="Horizontal">
                    <Image Source="{Binding Race.Image}" HeightRequest="50" Margin="0" />
                    <Label Text="{Binding Name}" VerticalOptions="Center" Margin="20,0,0,0"/>
                    <Label Text="{Binding Class.Display_Name}" VerticalOptions="Center" Margin="20,0,0,0"/>
                    <Label Text="{Binding Level}" VerticalOptions="Center" HorizontalOptions="EndAndExpand" />
                    <Button Text="{Binding Name}" Command="{Binding NavigateToNewCharacterPageCommand}"/>
                </StackLayout>
            </Frame>
            
        </DataTemplate>
    </ContentPage.Resources>
    
    
    <ScrollView>

        <CarouselView ItemsSource="{Binding MyCharacters}">
            <CarouselView.ItemTemplate>
                <DataTemplate x:DataType="model:Character">
                    <StackLayout>
                        <Frame HasShadow="True"
                       BorderColor="DarkGray"
                       CornerRadius="5"
                       Margin="20"
                       HeightRequest="300"
                       HorizontalOptions="Center"
                       VerticalOptions="CenterAndExpand">
                            <StackLayout>
                                <Label Text="{Binding Name}"
                               FontAttributes="Bold"
                               FontSize="18"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                                <Image Source="{Binding Race.Image}"
                               Aspect="AspectFill"
                               HeightRequest="150"
                               WidthRequest="150"
                               HorizontalOptions="Center" />
                                <Label Text="{Binding GameClass.Display_Name}"
                               HorizontalOptions="Center" />
                                <Label Text="{Binding Level}"
                               FontAttributes="Italic"
                               HorizontalOptions="Center"
                               MaxLines="5"
                               LineBreakMode="TailTruncation" />
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>


