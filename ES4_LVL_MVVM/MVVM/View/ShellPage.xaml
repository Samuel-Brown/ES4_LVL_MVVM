<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:ES4_LVL_MVVM.MVVM.View"
       x:Class="ES4_LVL_MVVM.MVVM.View.ShellPage">
    <TabBar >
        <Tab Title="Character"
            Icon="appicon.svg">
            <ShellContent ContentTemplate="{DataTemplate local:CharacterPage}" />
        </Tab>
        <Tab Title="Attributes"
            Icon="appicon.svg">
            <ShellContent ContentTemplate="{DataTemplate local:AttributesPage}" />
        </Tab>
        <Tab Title="Skills"
            Icon="appicon.svg">
            <ShellContent ContentTemplate="{DataTemplate local:SkillsPage}" />
        </Tab>
        <Tab Title="Level Up"
            Icon="appicon.svg">
            <ShellContent ContentTemplate="{DataTemplate local:LevelUpPage}" />
        </Tab>
    </TabBar>
</Shell>    
    
    
    
    
